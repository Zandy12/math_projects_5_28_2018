e = 0

def eulers_number(r):
    global e

    e = (1/r + 1)**r
    
'''
    for i in range(1,r,4):

        pi += (4/i)
        
    for third in range(-1,r,4):

        if third == -1:
            pass
        else:
            pi -= (4/third)
'''    

eulers_number(9999999) #9999999 is the highest number that can be accepted in python

print('%.51f' % e) # '%.51f' % increases the amount of decimal places python outputs
